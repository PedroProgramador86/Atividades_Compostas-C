#include <stdio.h>

int main()
{
    char nome[50];
    int idade;
    float peso, altura;
    
    printf("=====Insira os dados correspondentes=====\n\n");
    
    
    
    printf("Digite seu nome: ");
    fgets( nome , 50 ,  stdin );
    fflush(stdin);
    
    printf("Digite sua idade: ");
    scanf("%d", &idade);
    
    printf("Digite o seu peso(Kilos): ");
    scanf("%f", &peso);
    
    printf("Digite sua altura(Metros): ");
    scanf("%f", &altura);
    
    printf("Seu nome é %s, você tem %d anos, pesa %f kilos e tem %f de altura", nome, idade, peso, altura);

    return 0;
}
